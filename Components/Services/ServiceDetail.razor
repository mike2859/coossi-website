@code {
    [Parameter] public string? Title { get; set; }
    [Parameter] public string? Lead { get; set; }
    [Parameter] public IEnumerable<string>? Items { get; set; }
    [Parameter] public IEnumerable<string>? ItemsRight { get; set; } // si colonnes 2
    [Parameter] public bool Light { get; set; } = false;             // fond gris clair
}

<section class="@($"section-padding {(Light ? "bg-light" : "")}")">
  <div class="container">
    @if (!string.IsNullOrWhiteSpace(Title)) { <h2 class="display-6 fw-bold mb-3">@Title</h2> }
    @if (!string.IsNullOrWhiteSpace(Lead))  { <p class="lead">@Lead</p> }

    @if (ItemsRight is null)
    {
        <ul class="list-unstyled mb-0">
            @if (Items is not null)
            {
                @foreach (var it in Items) { <li class="mb-2"><i class="fas fa-angle-right text-danger me-2"></i>@it</li> }
            }
        </ul>
    }
    else
    {
        <div class="row">
            <div class="col-lg-6">
                <ul class="list-unstyled">
                    @if (Items is not null)
                    {
                        @foreach (var it in Items) { <li class="mb-2"><i class="fas fa-angle-right text-danger me-2"></i>@it</li> }
                    }
                </ul>
            </div>
            <div class="col-lg-6">
                <ul class="list-unstyled">
                    @foreach (var it in ItemsRight) { <li class="mb-2"><i class="fas fa-angle-right text-danger me-2"></i>@it</li> }
                </ul>
            </div>
        </div>
    }
  </div>
</section>
