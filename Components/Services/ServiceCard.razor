@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string? Icon { get; set; }      // ex "fa-file-contract"
    [Parameter] public string Href { get; set; } = "#";
    [Parameter] public string? Excerpt { get; set; }   // petit texte…
    [Parameter] public IEnumerable<string>? Bullets { get; set; } // …ou liste courte
}

<div class="card h-100 shadow-sm service-card">
    <div class="card-body">
        @if (!string.IsNullOrWhiteSpace(Icon))
        {
            <div class="mb-3"><i class="fas @Icon fa-2x text-danger"></i></div>
        }
        <h3 class="h5 fw-bold">@Title</h3>

        @if (!string.IsNullOrWhiteSpace(Excerpt))
        {
            <p class="text-muted mb-3">@Excerpt</p>
        }
        else if (Bullets is not null)
        {
            <ul class="list-unstyled small mb-3">
                @foreach (var b in Bullets.Take(3))
                {
                    <li class="mb-1"><i class="fas fa-check text-danger me-2"></i>@b</li>
                }
            </ul>
        }

        <a class="stretched-link text-decoration-none" href="@Href">
            <span class="fw-semibold">En savoir plus</span> <i class="fas fa-arrow-right ms-1"></i>
        </a>
    </div>
</div>
