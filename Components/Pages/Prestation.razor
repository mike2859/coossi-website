@page "/prestation/{Slug}"
@using Coossi.Blazor.Components.Shared
@using Coossi.Blazor.Data.Interfaces
@using Coossi.Blazor.Data.Models
@inject IPrestationStore Store

@code {
    [Parameter] public string Slug { get; set; } = default!;
    private PrestationPageDto? Page;

    protected override async Task OnParametersSetAsync()
    {
        Page = await Store.GetBySlugAsync(Slug);
    }
}

@if (Page is null)
{
    <div class="text-center py-5">
        <div class="spinner-border text-danger"></div>
        <p class="mt-3 text-muted">Chargement du contenu...</p>
    </div>
}
else
{
    <!-- SEO -->
    <Seo Title="@Page.MetaTitle"
         Description="@Page.MetaDescription"
         OgImage="@Page.OgImage"
         Canonical=@($"/prestation/{Page.Slug}") />

    <!-- Hero Header -->
    <section class="hero-section">
        <div class="container hero-content">
            <h1>@Page.Title</h1>
            @if (!string.IsNullOrWhiteSpace(Page.Subtitle))
            {
                <p class="lead">@Page.Subtitle</p>
            }
        </div>
    </section>

    <!-- Dynamic sections -->
    @if (Page.Sections is not null)
    {
        foreach (var s in Page.Sections)
        {
            switch (s.Kind)
            {
                case "html":
                    <Section>
                        @if (!string.IsNullOrWhiteSpace(s.Title))
                        {
                            <h2 class="section-title">@s.Title</h2>
                        }
                        @if (!string.IsNullOrWhiteSpace(s.Html))
                        {
                            @((MarkupString)s.Html)
                        }
                    </Section>
                    break;

                case "bullets":
                    <Section>
                        @if (!string.IsNullOrWhiteSpace(s.Title))
                        {
                            <h2 class="section-title">@s.Title</h2>
                        }
                        @if (s.Items is not null)
                        {
                            <ul class="info-card">
                                @foreach (var item in s.Items)
                                {
                                    <li>@((MarkupString)item)</li>
                                }
                            </ul>
                        }
                    </Section>
                    break;

                case "columns2":
                    <Section>
                        @if (!string.IsNullOrWhiteSpace(s.Title))
                        {
                            <h2 class="section-title">@s.Title</h2>
                        }
                        @if (!string.IsNullOrWhiteSpace(s.Lead))
                        {
                            <p class="lead">@s.Lead</p>
                        }
                        @if (s.Columns is not null && s.Columns.Count == 2)
                        {
                            <div class="row">
                                <div class="col-lg-6 mb-4">
                                    @foreach (var block in s.Columns[0])
                                    {
                                        @((MarkupString)block)
                                    }
                                </div>
                                <div class="col-lg-6 mb-4">
                                    @foreach (var block in s.Columns[1])
                                    {
                                        @((MarkupString)block)
                                    }
                                </div>
                            </div>
                        }
                    </Section>
                    break;

                @* case "cta":
                    <CtaBar
                        Title="Besoin d’un devis ?"
                        Text="Le standard est ouvert du lundi au samedi, de 9h à 19h."
                        CtaText="Nous contacter"
                        CtaHref="/contact"
                        IconClass="fas fa-envelope" />
                    break; *@
            }
        }
    }
}
