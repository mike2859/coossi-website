@using Coossi.Blazor.Data.Models
@namespace Coossi.Blazor.Components.Prestations.Views
@code {
    [Parameter] public PrestationPageDto Model { get; set; } = default!;
    PrestationSection? S(string t) => Model.Sections?.FirstOrDefault(x => string.Equals(x.Title, t, StringComparison.OrdinalIgnoreCase));
}
@{
    var sIntro   = S("Le dossier d’identité SSI");
    var sObj     = S("Objectifs en réception");
}

@if (sIntro is not null)
{
    <section class="content-section">
        <div class="container">
            <div class="info-card">
                <h3 class="mb-3">@sIntro.Title</h3>
                @((MarkupString?)sIntro.Html)
            </div>
        </div>
    </section>
}

@if (sObj?.Items?.Count > 0)
{
    <section class="content-section">
        <div class="container">
            <h2 class="section-title">@sObj.Title</h2>
            <div class="row">
                @foreach (var it in sObj.Items)
                {
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="info-card h-100 text-center">
                            <i class="fas fa-file-signature fa-2x mb-2" style="color:var(--primary)"></i>
                            <p class="mb-0">@it</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<section class="cta-section">
    <div class="container text-center">
        <h2 class="mb-3">Constituer votre dossier SSI</h2>
        <a href="/contact" class="btn-primary-custom"><i class="fas fa-envelope"></i> Demander un devis</a>
    </div>
</section>
