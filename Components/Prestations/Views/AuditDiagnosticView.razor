@using Coossi.Blazor.Data.Models
@namespace Coossi.Blazor.Components.Prestations.Views
@code {
    [Parameter] public PrestationPageDto Model { get; set; } = default!;
    PrestationSection? S(string t) => Model.Sections?.FirstOrDefault(x => string.Equals(x.Title, t, StringComparison.OrdinalIgnoreCase));
}
@{
    var sPourquoi = S("Pourquoi réaliser un audit ?");
    var sPerim    = S("Périmètre typique");
}

@if (sPourquoi is not null)
{
    <section class="content-section">
        <div class="container">
            <div class="info-card">
                <h3 class="mb-3">@sPourquoi.Title</h3>
                @((MarkupString?)sPourquoi.Html)
            </div>
        </div>
    </section>
}

@if (sPerim?.Columns is not null && sPerim.Columns.Count == 2)
{
    <section class="content-section">
        <div class="container">
            <h2 class="section-title">@sPerim.Title</h2>
            <div class="row">
                <div class="col-lg-6">
                    <div class="info-card h-100">
                        <ul>@foreach(var it in sPerim.Columns[0]) { <li>@it</li> }</ul>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="info-card h-100">
                        <ul>@foreach(var it in sPerim.Columns[1]) { <li>@it</li> }</ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<section class="cta-section">
    <div class="container text-center">
        <h2 class="mb-3">Programmer un audit</h2>
        <a href="/contact" class="btn-primary-custom"><i class="fas fa-envelope"></i> Prendre RDV</a>
    </div>
</section>
