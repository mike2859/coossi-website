@using Coossi.Blazor.Components.Shared
@using Coossi.Blazor.Data.Models
@namespace Coossi.Blazor.Components.Prestations.Views
@code {
    [Parameter] public PrestationPageDto Model { get; set; } = default!;
    PrestationSection? S(string t) => Model.Sections?.FirstOrDefault(x => string.Equals(x.Title, t, StringComparison.OrdinalIgnoreCase));
}
@{
    var sMission  = S("Mission obligatoire");
    var sActions  = S("Nos actions");
}

@if (sMission is not null)
{
    <section class="content-section">
        <div class="container">
            <div class="info-card">
                <h3 class="mb-3">@sMission.Title</h3>
                @((MarkupString?)sMission.Html)
            </div>
        </div>
    </section>
}

@if (sActions?.Items?.Count > 0)
{
    <section class="content-section">
        <div class="container">
            <h2 class="section-title">@sActions.Title</h2>
            <div class="row">
                @foreach (var it in sActions.Items)
                {
                    <div class="col-lg-4 mb-4">
                        <div class="info-card h-100">
                            <p class="mb-0">@it</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

