@using Coossi.Blazor.Data.Models
@namespace Coossi.Blazor.Components.Prestations.Views
@code {
    [Parameter] public PrestationPageDto Model { get; set; } = default!;
    PrestationSection? S(string t) => Model.Sections?.FirstOrDefault(x => string.Equals(x.Title, t, StringComparison.OrdinalIgnoreCase));
}
@{
    var sRole     = S("Rôle du RUS");
    var sMissions = S("Missions");
}

@if (sRole is not null)
{
    <section class="content-section">
        <div class="container">
            <div class="info-card">
                <h3 class="mb-3">@sRole.Title</h3>
                @((MarkupString?)sRole.Html)
            </div>
        </div>
    </section>
}

@if (sMissions?.Items?.Count > 0)
{
    <section class="content-section">
        <div class="container">
            <h2 class="section-title">@sMissions.Title</h2>
            <div class="row">
                @foreach (var it in sMissions.Items)
                {
                    <div class="col-lg-6 mb-4">
                        <div class="info-card h-100">
                            <p class="mb-0">@it</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<section class="cta-section">
    <div class="container text-center">
        <h2 class="mb-3">Rôle de RUS</h2>
        <a href="/contact" class="btn-primary-custom"><i class="fas fa-envelope"></i> Discuter ensemble</a>
    </div>
</section>
